{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "rootDir": "src",
    "esModuleInterop": true,
    "sourceMap": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "lib": ["es2018", "dom"],
    "types": ["jest", "node"]
  },
  "exclude": [
    "node_modules",
    "lib",
    "**/__tests__/**/*",
    "**/__stories__/**/*",
    "*.test.ts",
    "*.test.tsx"
  ]
}
